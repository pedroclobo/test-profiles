<?xml version="1.0"?>
<PhoronixTestSuite>
  <TestInformation>
    <Title>John The Ripper</Title>
    <AppVersion>2023.03.14</AppVersion>
    <Description>This is a benchmark of John The Ripper, which is a password cracker.</Description>
    <ResultScale>Real C/S</ResultScale>
    <Proportion>HIB</Proportion>
    <TimesToRun>3</TimesToRun>
  </TestInformation>
  <TestSettings>
    <Default>
      <Arguments>--test=30 </Arguments>
    </Default>
    <Option>
      <DisplayName>Test</DisplayName>
      <Identifier>run-test</Identifier>
      <Menu>
        <Entry>
          <Name>MD5</Name>
          <Value>--format=md5crypt</Value>
        </Entry>
        <Entry>
          <Name>HMAC-SHA512</Name>
          <Value>--format=HMAC-SHA512</Value>
        </Entry>
        <Entry>
          <Name>WPA PSK</Name>
          <Value>--format=wpapsk</Value>
        </Entry>
      </Menu>
    </Option>
  </TestSettings>
</PhoronixTestSuite>
